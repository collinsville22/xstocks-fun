{
  "name": "xstocksfun-backend",
  "version": "1.0.0",
  "description": "Backend for xStocksFun trading platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "dev:retry": "nodemon --exec node --watch server.js || (sleep 3 && nodemon --exec node --watch server.js)",
    "start:retry": "node server.js || (sleep 2 && node server.js) || (sleep 5 && node server.js)",
    "build": "echo 'No build step required'"
  },
  "dependencies": {
    "@solana/web3.js": "^1.98.4",
    "bs58": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.8.1",
    "technicalindicators": "^3.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "packageManager": "pnpm@8.0.0"
}